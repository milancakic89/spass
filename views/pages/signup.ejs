<%- include('../includes/_header.ejs') %> <%- include('../includes/_nav.ejs') %>
<%- include('../includes/_hero.ejs') %>
<div class="authentication">
  <div class="wrapper">
          <div class="password-checklist-wrapper">
            <p>Password strength</p>
            <ul>
              <li class="checklist-item">At least 8 characters long</li>
              <li class="checklist-item">At least 1 number</li>
              <li class="checklist-item">At least 1 lowercase letter</li>
              <li class="checklist-item">At least 1 uppercase letter</li>
              <li class="checklist-item">At least 1 special character</li>
            </ul>
          </div>
    <h1>Signup</h1>
    <form action="/auth/signup" method="POST">

      <label>Email</label>
      <input name="email" type="email" value=""/>
      <label>Password</label>
      <input class="password-input" name="password" type="password" value="" autocomplete/>
      <label>Repeat password</label>
      <input class="password-input-repeat" name="repeat_password" type="password" value="" autocomplete/>
      <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
      <button class="default">Signup</button>
    <p style="text-align: center;">Allready have account, <a href="/auth/login">login</a></p>
    </form>
  </div>
</div>

